<Window x:Class="Expaceo.SoundLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Beep!" HorizontalAlignment="Left" Margin="336,59,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <ComboBox x:Name="CB_BitsPerSample" HorizontalAlignment="Left" Margin="131,10,0,0" VerticalAlignment="Top" Width="120">
            <ListBoxItem Content="8"/>
            <ListBoxItem Content="16"/>
        </ComboBox>
        <Label Content="Bits" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Width="116"/>
        <ComboBox x:Name="CB_SamplePerSec" HorizontalAlignment="Left" Margin="131,36,0,0" VerticalAlignment="Top" Width="120">
            <ListBoxItem Content="11025"/>
            <ListBoxItem Content="22050"/>
            <ListBoxItem Content="44100"/>
        </ComboBox>
        <Label Content="Echantillons/s" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Width="116"/>
        <Label Content="Fréquence" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Width="116"/>
        <TextBox x:Name="TB_Frequency" HorizontalAlignment="Left" Height="21" Margin="131,63,0,0" TextWrapping="Wrap" Text="440" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
