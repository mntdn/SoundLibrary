<Window x:Class="Expaceo.SoundLibrary.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="236.807" Width="525">
    <Grid x:Name="MainGrid">
        <ComboBox x:Name="CB_WaveType" HorizontalAlignment="Left" Margin="131,14,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CB_WaveType_SelectionChanged">
            <ComboBoxItem Content="Sinusoïdal" IsSelected="True"/>
            <ComboBoxItem Content="Carré"/>
            <ComboBoxItem Content="Bruit"/>
        </ComboBox>
        <Label Content="Type d'onde" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="116"/>
        <Canvas x:Name="Canvas_Piano" HorizontalAlignment="Left" Height="101" Margin="10,72,0,0" VerticalAlignment="Top" Width="309"/>
        <Slider x:Name="slider_Volume" HorizontalAlignment="Left" Margin="131,41,0,0" VerticalAlignment="Top" Width="120" ValueChanged="Slider_ValueChanged" Maximum="100" Value="80"/>
        <Label Content="Volume" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="116"/>
        <Button x:Name="But_PlaySound" Content="PlaySound" HorizontalAlignment="Left" Margin="337,14,0,0" VerticalAlignment="Top" Width="75" Click="But_PlaySound_Click"/>
    </Grid>
</Window>
